{
    "title": "Navier-Stokes",
    "description": "Stable fluid simulation running on GPU",
    "introduction": [
        "This project is a WebGL incompressible fluid simulation running entirely on your GPU. You can interact with the fluid with the left mouse button and visualize both the velocity and the pressure of the fluid.",
        "This is an implementation of the Stable Fluid described by J. Stam."
    ],
    "githubProjectName": "navier-stokes-webgl",
    "additionalLinks": [],
    "scriptFiles": [
        "script/main.js"
    ],
    "indicators": [
        {
            "id": "fps",
            "label": "FPS"
        }
    ],
    "canvas": {
        "width": 512,
        "height": 512,
        "enableFullscreen": false
    },
    "controlsSections": [
        {
            "title": "Simulation",
            "controls": [
                {
                    "title": "Resolution",
                    "type": "tabs",
                    "id": "resolution",
                    "unique": true,
                    "options": [
                        {
                            "value": "128",
                            "label": "128"
                        },
                        {
                            "value": "256",
                            "label": "256",
                            "checked": true
                        },
                        {
                            "value": "512",
                            "label": "512"
                        }
                    ]
                },
                {
                    "title": "Float texture",
                    "type": "checkbox",
                    "id": "float-texture-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Solver steps",
                    "type": "range",
                    "id": "solver-steps-range-id",
                    "min": 1,
                    "max": 99,
                    "value": 49,
                    "step": 2
                },
                {
                    "title": "Time step",
                    "type": "range",
                    "id": "timestep-range-id",
                    "min": 0.01,
                    "max": 0.1,
                    "value": 0.033,
                    "step": 0.001
                },
                {
                    "title": "Stream",
                    "type": "checkbox",
                    "id": "stream-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Obstacles",
                    "type": "tabs",
                    "id": "obstacles",
                    "unique": true,
                    "options": [
                        {
                            "value": "none",
                            "label": "None"
                        },
                        {
                            "value": "one",
                            "label": "One"
                        },
                        {
                            "value": "many",
                            "label": "Many",
                            "checked": true
                        }
                    ]
                }
            ]
        },
        {
            "title": "Brush",
            "controls": [
                {
                    "title": "Radius",
                    "type": "range",
                    "id": "brush-radius-range-id",
                    "min": 20,
                    "max": 100,
                    "value": 40,
                    "step": 1
                },
                {
                    "title": "Strength",
                    "type": "range",
                    "id": "brush-strength-range-id",
                    "min": 20,
                    "max": 200,
                    "value": 100,
                    "step": 1
                }
            ]
        },
        {
            "title": "Display",
            "controls": [
                {
                    "title": "Fields",
                    "type": "tabs",
                    "id": "displayed-fields",
                    "unique": false,
                    "options": [
                        {
                            "value": "velocity",
                            "label": "Velocity",
                            "checked": true
                        },
                        {
                            "value": "pressure",
                            "label": "Pressure"
                        }
                    ]
                },
                {
                    "title": "Intensity",
                    "type": "range",
                    "id": "intensity-range-id",
                    "min": 0.1,
                    "max": 10,
                    "value": 1,
                    "step": 0.1
                },
                {
                    "title": "Color",
                    "type": "checkbox",
                    "id": "display-color-checkbox-id",
                    "checked": true
                },
                {
                    "title": "Obstacles",
                    "type": "checkbox",
                    "id": "display-obstacles-checkbox-id",
                    "checked": true
                }
            ]
        }
    ]
}